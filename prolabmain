#include <allegro.h>

void Baslat();
void Bitir();
 
int main() {
Baslat();
BITMAP *arakatman=create_bitmap(960,540);
BITMAP *arakatman2=create_bitmap(960,540);
BITMAP *b1=load_bitmap("yeni.bmp",NULL);
BITMAP *b2=load_bitmap("sef.bmp",NULL);
BITMAP *b3=load_bitmap("sorg.bmp",NULL);
BITMAP *bck=load_bitmap("bck.bmp",NULL);
BITMAP *ext=load_bitmap("ext.bmp",NULL);
BITMAP *b1h=load_bitmap("yenih.bmp",NULL);
BITMAP *b2h=load_bitmap("sefh.bmp",NULL);
BITMAP *b3h=load_bitmap("sorgh.bmp",NULL);
BITMAP *ttl=load_bitmap("title.bmp",NULL);
BITMAP *sttl=load_bitmap("stitle.bmp",NULL);
BITMAP *sfttl=load_bitmap("sftitle.bmp",NULL);
show_mouse(screen);
clear_to_color(arakatman,makecol(29,29,29));
clear_to_color(arakatman2,makecol(29,29,29));
while (!key[KEY_ESC]) {

	masked_blit(bck,arakatman,0,0,0,0,960,60);
	masked_blit(b1,arakatman,0,0,15,75,85,85);
	masked_blit(b2,arakatman,0,0,15,167,85,85);
	masked_blit(b3,arakatman,0,0,15,258,85,85);

	if(!(mouse_b & 1) && mouse_x>15 && mouse_x<90 && mouse_y>75 && mouse_y<160)
	{
		blit(b1h,arakatman,0,0,15,75,85,85);
	}
	if(!(mouse_b & 1) && mouse_x>15 && mouse_x<90 && mouse_y>167 && mouse_y<250)
	{
		blit(b2h,arakatman,0,0,15,167,85,85);
	}
	if(!(mouse_b & 1) && mouse_x>15 && mouse_x<90 && mouse_y>258 && mouse_y<328)
	{
		blit(b3h,arakatman,0,0,15,257,85,85);
	}
	if(!(mouse_b & 1) && mouse_x>15 && mouse_x<90 && mouse_y>258 && mouse_y<328)
	{
		blit(b3h,arakatman,0,0,15,258,85,85);
	}
	if(!(mouse_b & 1) && mouse_x>900 && mouse_x<960 && mouse_y>0 && mouse_y<60)
	{
		masked_blit(ext,arakatman,0,0,895,0,60,60);

	}
///////////////tıklamalar///////
//////////çıkıs/////////
	if((mouse_b & 1) && mouse_x>900 && mouse_x<960 && mouse_y>0 && mouse_y<60)
	{
			return 0;
	}
//////////yeni/////////
	if((mouse_b & 1) && mouse_x>15 && mouse_x<100 && mouse_y>75 && mouse_y<160)
	{
			clear_to_color(arakatman2,makecol(29,29,29));
			masked_blit(ttl,arakatman2,0,0,0,0,120,260);
	}
//////////seferler/////////
	if((mouse_b & 1) && mouse_x>15 && mouse_x<100 && mouse_y>168 && mouse_y<250)
	{
			clear_to_color(arakatman2,makecol(29,29,29));
			masked_blit(sfttl,arakatman2,0,0,30,20,120,260);
	}
//////////sorgula/////////
	if((mouse_b & 1) && mouse_x>15 && mouse_x<100 && mouse_y>258 && mouse_y<328)
	{
			clear_to_color(arakatman2,makecol(29,29,29));
			masked_blit(sttl,arakatman2,0,0,30,20,120,260);
			
	}

	masked_blit(arakatman,screen,0,0,0,0,960,540);
	masked_blit(arakatman2,screen,0,0,195,60,760,480);
	rest(60);
}
Bitir();
return 0;
}
END_OF_MAIN()
 
void Baslat() {
int depth, res;
allegro_init();
depth = desktop_color_depth();
if (depth == 0) depth = 16;
set_color_depth(depth);
res = set_gfx_mode(GFX_AUTODETECT_WINDOWED, 960, 540, 0, 0);
if (res != 0) {
allegro_message(allegro_error);
exit(-1);
}

install_timer();
install_keyboard();
install_mouse();
 
}
void Bitir() {
clear_keybuf();
}

